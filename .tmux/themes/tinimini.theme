# Status bar -------------------------------------------------------------
set -g status-position bottom
set -g status-bg colour8
set -g status-fg colour137
# set -g status-left "#[fg=colour237,bg=colour11]   #S #[fg=colour11,bg=colour237,nobold,nounderscore,noitalics]"
set -g status-left "#[fg=colour0,bg=colour2]  #S #[fg=colour2,bg=colour8,nobold,nounderscore,noitalics]"

# set -g status-right "#[fg=colour7,bg=colour237,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour237] #(~/scripts/kube-context.sh) - #[italics]#(~/scripts/kube-namespace.sh)#[noitalics] #[fg=colour237,bg=colour11,nobold,nounderscore,noitalics]   #h "
