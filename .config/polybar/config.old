[colors]
background = ${xrdb:color1:#222}
background-alt = ${xrdb:color13:#222}
background-alt-2 = ${xrdb:color11:#222}
foreground = ${xrdb:color5:#222}
foreground-alt = ${xrdb:color14:#555}
foreground-alt-2 = ${xrdb:color9:#555}
highlight = ${xrdb:color14:#f00}
urgent = ${xrdb:color11:#f00}
blue = ${xrdb:color10:#00f}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 3
margin-bottom = 3

[bar/lodpi]
font-0 = xos4Terminus:pixelsize=12;1
font-1 = "Material Icons:size=12;4"
font-2 = forkawesome:pixelsize=12;1
height = 25

width = 100%
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-bottom-size = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = ${colors.blue}

padding-left = 0
padding-right = 2
padding-top = 2
padding-bottom = 2

wm-restack = i3
override-redirect = false

[bar/hidpi]
font-0 = xos4Terminus:pixelsize=20;1
font-1 = "Material Icons:size=20;4"
font-2 = forkawesome:pixelsize=20;1
height = 45

width = 100%
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-bottom-size = 2
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = ${colors.blue}

padding-left = 0
padding-right = 2
padding-top = 2
padding-bottom = 2

wm-restack = i3
override-redirect = false

[bar/dp1]
monitor = DP1
inherit = bar/lodpi

module-margin-left = 1
module-margin-right = 1

modules-left = i3 xwindowicon xwindow
modules-center = date
modules-right = scratchpad fs-root fs-home network vpncheck pulseaudio battery

[bar/dp2]
monitor = DP2
inherit = bar/lodpi

module-margin-left = 1
module-margin-right = 1

modules-left = i3 xwindowicon xwindow
modules-center = date

[bar/edp1]
monitor = eDP1
inherit = bar/hidpi

module-margin-left = 1
module-margin-right = 1

modules-left = i3 xwindowicon xwindow
modules-center = date

[bar/edp1-only]
monitor = eDP1
inherit = bar/hidpi

module-margin-left = 1
module-margin-right = 1

modules-left = i3 xwindowicon xwindow
modules-center = date
modules-right = scratchpad fs-root fs-home network vpncheck pulseaudio battery
; modules-right = scratchpad fs-root fs-home cpu memory temperature network vpncheck volume battery

; tray-position =
; tray-padding = 3
; tray-transparent = false
; tray-offset-y = 0
; tray-offset-x = -0
; tray-maxsize = 18
; tray-detached = false
; tray-background = ${colors.background}

[module/updates]
type = custom/script
exec = ~/scripts/updates-arch-combined.sh
interval = 3600

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = "%{F#A3BE8C} %{F-}%mountpoint% %free%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-mode><label-state>

index-sort = true
enable-click = true
enable-scroll = false

strip-wsnumbers = true
label-mode-padding = 2

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background-alt-2}

; focused = Active workspace on focused monitor
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.background}
; label-focused-overline = ${colors.highlight}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 1

; urgent = Workspace with urgency hint set
label-urgent-foreground = ${colors.foreground-alt-2}
label-urgent-background = ${colors.background}
label-urgent-padding = 1

label-visible-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:65:...%
label-xwindow-width = 100

[module/xwindowicon]
type = custom/text
; content = 
content = »
content-foreground = ${colors.foreground-alt}

[module/pacman]
type = custom/script
exec = ~/scripts/checkupdates.sh
interval = 60

[module/load]
type = custom/script
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
exec = uptime | grep -ohe 'load average[s:][: ].*' | awk '{ print $3 $4 $5 }' | sed 's/,/ /;s/,/ /'
;exec = uptime | grep -ohe 'load average[s:][: ].*' | awk '{ print $3 }' | sed 's/,//'
interval = 10

[module/fs-root]
type = internal/fs
interval = 60

mount-0 = /

label-mounted = %{F#A3BE8C} %{F-}%mountpoint%%{F$(colors.foreground)} %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/fs-home]
type = internal/fs
interval = 60

mount-0 = /home

label-mounted = %{F#A3BE8C} %{F-}%mountpoint%%{F$(colors.foreground)} %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

format = <label>
format-foreground = ${colors.foreground}

label = %percentage%%

[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 0
warn-temperature = 65
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input

format = <label>
format-warn = <label-warn>

label = %{F#A3BE8C} %{F-}%temperature-c%
label-warn = %{F$(colors.urgent)} %{F-}%temperature-c%
format-warn-foreground = ${colors.foreground}
format-warn-background = ${colors.urgent}

[module/system-cpu-temppercore]
type = custom/script
exec = ~/scripts/system-cpu-coretemp.sh
interval = 10

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{F#A3BE8C} %{F-}"
label = %gb_used%
; label = "%{A:gnome-terminal -- gotop; sleep 0.1; i3-msg floating enable; i3-msg resize set 1000px 800px; i3-msg move position center:}%gb_used%/%gb_total%%{A}"

[module/network]
type = internal/network
interface = wlp60s0

interval = 2.0

format-connected = <label-connected>
format-disconnected-underline = ${colors.urgent}

label-connected = "%{A:networkmanager_dmenu:}%{F#A3BE8C} %{F-}%essid%%{A}"
label-disconnected = "%{A:networkmanager_dmenu:}OFFLINE%{A}"
label-connected-foreground = ${colors.foreground}
label-disconnected-foreground = ${colors.urgent}

ramp-signal-0 = 0
ramp-signal-1 = 1
ramp-signal-2 = 2
ramp-signal-3 = 3
ramp-signal-4 = 4
ramp-signal-foreground = ${colors.foreground-alt}

; [module/mpd]
; type = internal/mpd
;
; host = 127.0.0.1
; port = 6600
;
; ; Seconds to sleep between progressbar/song timer sync, Default: 1
; interval = 2
;
; format-online = <label-song>
; format-online-prefix = " "
; format-online-prefix-foreground = ${colors.foreground-alt}
;
; label-song = %artist% - %title%
; label-offline = mpd is offline

[module/current-song-spotify]
type = custom/script
exec = ~/Scripts/spotify.sh %artist% - %title%
tail = true
interval = 2

[module/backlight]
monitor = eDP1
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = │
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = #55

[module/volume]
type = internal/pulseaudio

format-volume = <bar-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}

format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.foreground-alt}

label-muted = muted
label-muted-foreground = ${colors.urgent}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.foreground-alt}
bar-volume-foreground-1 = ${colors.foreground-alt}
bar-volume-foreground-2 = ${colors.foreground-alt}
bar-volume-foreground-3 = ${colors.foreground-alt}
bar-volume-foreground-4 = ${colors.highlight}
bar-volume-foreground-5 = ${colors.urgent}
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 4
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill = 
bar-volume-fill-font = 4
bar-volume-empty = 
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio
; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
; sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}

format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.foreground-alt}

label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = mute
label-muted-foreground = ${colors.urgent}

[module/keyboard]
type = internal/xkeyboard

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format = <label-layout>
format-foreground = ${colors.foreground}
label = layout = %name%

[module/vpncheck]
type = custom/script
exec = sh ~/scripts/vpncheck.sh
format-foreground = ${colors.foreground}
interval = 5
click-left = notify-send 'Opening VPN' 'Hang on...' -i lock

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

format-foreground = ${colors.foreground}

;
; Default: 5
poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage%%
label-discharging = %percentage%%

; Available tokens:
;   %percentage% (default)
label-full = %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-foreground = ${colors.foreground-alt}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 500

[module/date]
type = internal/date
interval = 5

date =
date-alt = "It is day %j, week %V, of year %y of the %Cth century"

time = " %a, %b %d   %H:%M "
; time-alt = %H:%M:%S

format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.background-alt}

label = %date% %time%

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = "      "
label-open-background = ${colors.foreground-alt}
label-open-foreground = ${colors.foreground}
label-close = "    cancel   "
label-close-background = ${colors.background-alt-2}
label-close-foreground = ${colors.foreground}
label-separator = " "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = logout
menu-0-0-exec = cinnamon-session-quit
menu-0-1 = reboot
menu-0-1-exec = cinnamon-session-quit --reboot
menu-0-2 = "power off   "
menu-0-2-exec = cinnamon-session-quit --power-off

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = "logout   "
menu-1-1-exec = cinnamon-session-quit

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = "reboot   "
menu-2-1-exec = cinnamon-session-quit --reboot

menu-3-0 = cancel
menu-3-0-exec = menu-open-0
menu-3-1 = "power off   "
menu-3-1-exec = cinnamon-session-quit --power-off

[module/weather]
type = custom/script
interval = 10

;format-background = ${colors.background-alt}
format = <label>
; format-prefix = ""
format-suffix = "   "
format-prefix-foreground = ${colors.foreground}
exec = python ~/scripts/weather.py

[module/scratchpad]
type = custom/script
interval = 0
tail = true

format-prefix = "%{F#A3BE8C} %{F-}"
format-prefix-foreground = ${colors.foreground}
exec = python -u ~/scripts/i3-scratchpad-count.py

[module/redshift]
type = custom/script
exec = ~/scripts/info-redshift-temp.sh
interval = 10
click-left = ~/scripts/toggle-redshift.sh

; vim:ft=dosini
